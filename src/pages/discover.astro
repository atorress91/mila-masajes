<style>
  /* Variables de color */
  :root {
    --bg-main: #faf9f7;
    --text-dark: #2c2c2c;
    --text-secondary: #6b6b6b;
  }

  .services-page {
    min-height: 100vh;
    background: var(--bg-main);
  }

  /* Hero Section */
  .services-hero {
    background: var(--bg-main);
    padding: 80px 0 60px;
    text-align: center;
  }

  .hero-title {
    font-size: 48px;
    font-weight: 700;
    color: var(--text-dark);
    margin-bottom: 16px;
    font-family: 'Poppins', sans-serif;
  }

  .title-underline {
    width: 96px;
    height: 4px;
    background: #e8d5d5;
    margin: 0 auto 24px;
  }

  .hero-subtitle {
    font-size: 20px;
    color: var(--text-secondary);
    max-width: 650px;
    margin: 0 auto;
    line-height: 1.6;
    font-family: 'Poppins', sans-serif;
  }

  /* Services Grid Section */
  .services-grid-section {
    padding: 40px 0;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 32px;
    margin-bottom: 64px;
  }

  .services-grid-wide {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 32px;
  }

  /* Service Cards */
  .service-card,
  .service-card-wide {
    background: white;
    border-radius: 24px;
    overflow: hidden;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
  }

  .service-card:hover,
  .service-card-wide:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.12);
  }

  .service-image,
  .service-image-wide {
    height: 256px;
    position: relative;
    overflow: hidden;
  }

  .duration-badge {
    position: absolute;
    top: 16px;
    right: 16px;
    background: white;
    padding: 6px 14px;
    border-radius: 20px;
    font-size: 14px;
    font-weight: 600;
    font-family: 'Poppins', sans-serif;
  }

  .service-content {
    padding: 32px;
  }

  .service-title {
    font-size: 24px;
    font-weight: 700;
    color: var(--text-dark);
    margin-bottom: 12px;
    font-family: 'Poppins', sans-serif;
  }

  .service-description {
    font-size: 16px;
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: 20px;
    font-family: 'Poppins', sans-serif;
  }

  .service-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
  }

  .service-price {
    font-size: 30px;
    font-weight: 700;
    font-family: 'Poppins', sans-serif;
  }

  .service-rating {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .stars {
    color: #000;
    font-size: 16px;
    letter-spacing: 2px;
  }

  .rating-value {
    color: var(--text-secondary);
    font-size: 14px;
    font-family: 'Poppins', sans-serif;
  }

  .book-button {
    width: 100%;
    padding: 12px 24px;
    border: none;
    border-radius: 16px;
    color: white;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition:
      opacity 0.3s ease,
      transform 0.3s ease;
    font-family: 'Poppins', sans-serif;
    text-decoration: none;
    display: inline-block;
    text-align: center;
  }

  .book-button:hover {
    opacity: 0.9;
    transform: translateY(-2px);
  }

  /* Packages Section */
  .packages-section {
    padding: 60px 0;
  }

  .packages-wrapper {
    background: linear-gradient(to right, #f0e8e0, #f8f4f0);
    border-radius: 24px;
    padding: 60px 40px;
  }

  .packages-title {
    font-size: 30px;
    font-weight: 700;
    color: var(--text-dark);
    text-align: center;
    margin-bottom: 48px;
    font-family: 'Poppins', sans-serif;
  }

  .packages-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 32px;
  }

  .package-card {
    background: white;
    border-radius: 16px;
    padding: 40px 32px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
    text-align: center;
    position: relative;
