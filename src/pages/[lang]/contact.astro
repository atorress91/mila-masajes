---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SUPPORTED_LANGS, getLangFromAstro, withLangParam } from '../../lib/i18n';
import { getTranslations } from '../../lib/translations';

export function getStaticPaths() {
  return SUPPORTED_LANGS.map(lang => ({ params: { lang } }));
}

const lang = getLangFromAstro(Astro);
const copy = getTranslations(lang);
const localizedHref = (path: string) => withLangParam(path, lang);
const currentPath = `${Astro.url.pathname}${Astro.url.search}`;

// Special offers
const specialOffers = copy.contact.specialOffers || [];
---

<Layout title={copy.contact.pageTitle} description={copy.contact.metaDescription} lang={lang}>
  <Header lang={lang} copy={copy} currentPath={currentPath} />

  <main class="contact-page">
    <div class="container">
      <!-- Hero Section -->
      <div class="contact-hero">
        <h1 class="contact-main-title">{copy.contact.heroTitle}</h1>
        <p class="contact-subtitle">{copy.contact.heroSubtitle}</p>
      </div>

      <!-- Two Column Layout -->
      <div class="contact-layout">
        <!-- Left Column -->
        <div class="left-column">
          <!-- Visit Our Spa Card -->
          <div class="info-card">
            <h2 class="card-title">{copy.contact.visitTitle}</h2>

            <!-- Address -->
            <div class="info-block">
              <div class="icon-box">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                  <path
                    d="M12 2C8.13 2 5 5.13 5 9C5 14.25 12 22 12 22C12 22 19 14.25 19 9C19 5.13 15.87 2 12 2ZM12 11.5C10.62 11.5 9.5 10.38 9.5 9C9.5 7.62 10.62 6.5 12 6.5C13.38 6.5 14.5 7.62 14.5 9C14.5 10.38 13.38 11.5 12 11.5Z"
                    fill="white"></path>
                </svg>
              </div>
              <div>
                <h3 class="info-label">{copy.contact.addressLabel}</h3>
                <div id="address-container"><p class="info-value loading-placeholder">Cargando...</p></div>
              </div>
            </div>

            <!-- Phone -->
            <div class="info-block">
              <div class="icon-box">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                  <path
                    d="M20.01 15.38C18.78 15.38 17.59 15.18 16.48 14.82C16.13 14.7 15.74 14.79 15.47 15.06L13.9 17.03C11.07 15.68 8.42 13.13 7.01 10.2L8.96 8.54C9.23 8.26 9.31 7.87 9.2 7.52C8.83 6.41 8.64 5.22 8.64 3.99C8.64 3.45 8.19 3 7.65 3H4.19C3.65 3 3 3.24 3 3.99C3 13.28 10.73 21 20.01 21C20.72 21 21 20.37 21 19.82V16.37C21 15.83 20.55 15.38 20.01 15.38Z"
                    fill="white"></path>
                </svg>
              </div>
              <div>
                <h3 class="info-label">{copy.contact.phoneLabel}</h3>
                <div id="phone-container"><p class="info-value loading-placeholder">Cargando...</p></div>
              </div>
            </div>

            <!-- Email -->
            <div class="info-block">
              <div class="icon-box">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                  <path
                    d="M20 4H4C2.9 4 2.01 4.9 2.01 6L2 18C2 19.1 2.9 20 4 20H20C21.1 20 22 19.1 22 18V6C22 4.9 21.1 4 20 4ZM20 8L12 13L4 8V6L12 11L20 6V8Z"
                    fill="white"></path>
                </svg>
              </div>
              <div>
                <h3 class="info-label">{copy.contact.emailLabel}</h3>
                <div id="email-container"><p class="info-value loading-placeholder">Cargando...</p></div>
              </div>
            </div>
          </div>

          <!-- Business Hours Card -->
          <div class="info-card">
            <h2 class="card-title">{copy.contact.hoursTitle}</h2>
            <div id="hours-container"><p class="info-value loading-placeholder">Cargando...</p></div>
          </div>

          <!-- Special Offers Card -->
          <div class="offers-card">
            <h2 class="card-title-white">{copy.contact.offersTitle}</h2>
            {
              specialOffers.map(offer => (
                <div class="offer-item">
                  <h4 class="offer-title">{offer.title}</h4>
                  <p class="offer-description">{offer.description}</p>
                </div>
              ))
            }
          </div>
        </div>

        <!-- Right Column - Contact Form -->
        <div class="right-column">
          <div class="form-card">
            <h2 class="card-title">{copy.contact.formTitle}</h2>

            <form id="contactForm" class="contact-form">
              <div class="form-row">
                <div class="form-group">
                  <label for="fullName" class="form-label">{copy.contact.fullNameLabel}</label>
                  <input
                    type="text"
                    id="fullName"
                    name="fullName"
                    placeholder={copy.contact.fullNamePlaceholder}
                    class="form-input"
                    required
                  />
                </div>

                <div class="form-group">
                  <label for="email" class="form-label">{copy.contact.emailFieldLabel}</label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    placeholder={copy.contact.emailPlaceholder}
                    class="form-input"
                    required
                  />
                </div>
              </div>

              <div class="form-row">
                <div class="form-group">
                  <label for="phone" class="form-label">{copy.contact.phoneFieldLabel}</label>
                  <input
                    type="tel"
                    id="phone"
                    name="phone"
                    placeholder={copy.contact.phonePlaceholder}
                    class="form-input"
                  />
                </div>

                <div class="form-group">
                  <label for="service" class="form-label">{copy.contact.serviceLabel}</label>
                  <select id="service" name="service" class="form-select">
                    <option value="">{copy.contact.servicePlaceholder}</option>
                    {copy.contact.serviceOptions.map(option => <option value={option.value}>{option.label}</option>)}
                  </select>
                </div>
              </div>

              <div class="form-group">
                <label for="message" class="form-label">{copy.contact.messageLabel}</label>
                <textarea id="message" name="message" rows="5" class="form-textarea" required></textarea>
              </div>

              <div class="checkbox-group">
                <input type="checkbox" id="consent" name="consent" required />
                <label for="consent" class="checkbox-label">{copy.contact.consentLabel}</label>
              </div>

              <button type="submit" class="btn-submit-form">{copy.contact.submitLabel}</button>
            </form>
          </div>
        </div>
      </div>

      <!-- Find Us Section -->
      <div class="map-section">
        <h2 class="section-title">{copy.contact.mapTitle}</h2>
        <div class="map-wrapper">
          <div class="map-container" id="map-container">
            <p class="loading-placeholder">Cargando mapa...</p>
          </div>
        </div>
      </div>

      <!-- CTA Section -->
      <div class="cta-section">
        <h2 class="cta-title">{copy.contact.ctaTitle}</h2>
        <p class="cta-description">{copy.contact.ctaDescription}</p>
        <div class="cta-buttons">
          <a href={localizedHref('/discover')} class="btn-cta-primary">{copy.contact.ctaPrimary}</a>
          <a href="#" id="cta-phone-link" class="btn-cta-secondary"
            >{copy.contact.ctaSecondary} <span id="cta-phone-number"></span></a
          >
        </div>
      </div>
    </div>
  </main>

  <Footer lang={lang} copy={copy} />
</Layout>

<style>
  @import '../../styles/contact.css';

  .loading-placeholder {
    color: rgba(255, 255, 255, 0.6);
    font-style: italic;
  }
</style>

<script is:inline define:vars={{ formMessagesJson: JSON.stringify(copy.contact.formMessages) }}>
  window.__CONTACT_FORM_MESSAGES__ = JSON.parse(formMessagesJson);
</script>

<script>
  import { initContactForm } from '../../logic/contact.js';

  // Sanity client configuration for browser
  const SANITY_PROJECT_ID = '6z0ec6tg';
  const SANITY_DATASET = 'production';
  const SANITY_API_VERSION = '2024-01-01';

  async function fetchContactInfo() {
    const query = encodeURIComponent(`*[_type == "contactInfo"][0] {
      _id,
      email,
      phone,
      address,
      hours,
      socialMedia,
      mapEmbed
    }`);

    // Usar apicdn.sanity.io para CORS
    const url = `https://${SANITY_PROJECT_ID}.apicdn.sanity.io/v${SANITY_API_VERSION}/data/query/${SANITY_DATASET}?query=${query}`;

    try {
      const response = await fetch(url);
      const data = await response.json();
      return data.result;
    } catch (error) {
      console.error('Error fetching contact info from Sanity:', error);
      return null;
    }
  }

  function updateContactUI(contact) {
    if (!contact) return;

    // Update address
    const addressContainer = document.getElementById('address-container');
    if (addressContainer && contact.address) {
      const addressLines = contact.address
        .split(/[,\n]/)
        .map(a => a.trim())
        .filter(Boolean);
      addressContainer.innerHTML = addressLines.map(line => `<p class="info-value">${line}</p>`).join('');
    }

    // Update phone
    const phoneContainer = document.getElementById('phone-container');
    if (phoneContainer && contact.phone) {
      const phoneNumbers = contact.phone
        .split(/[,\n]/)
        .map(p => p.trim())
        .filter(Boolean);
      phoneContainer.innerHTML = phoneNumbers.map(phone => `<p class="info-value">${phone}</p>`).join('');

      // Update CTA phone link
      const primaryPhone = phoneNumbers[0] || '';
      const primaryPhoneTel = primaryPhone.replace(/[^0-9]/g, '');
      const ctaPhoneLink = document.getElementById('cta-phone-link');
      const ctaPhoneNumber = document.getElementById('cta-phone-number');
      if (ctaPhoneLink) ctaPhoneLink.href = `tel:${primaryPhoneTel}`;
      if (ctaPhoneNumber) ctaPhoneNumber.textContent = primaryPhone;
    }

    // Update email
    const emailContainer = document.getElementById('email-container');
    if (emailContainer && contact.email) {
      const emails = contact.email
        .split(/[,\n]/)
        .map(e => e.trim())
        .filter(Boolean);
      emailContainer.innerHTML = emails.map(email => `<p class="info-value">${email}</p>`).join('');
    }

    // Update hours
    const hoursContainer = document.getElementById('hours-container');
    if (hoursContainer && contact.hours && contact.hours.length > 0) {
      hoursContainer.innerHTML = contact.hours
        .map(
          hour => `
        <div class="hours-row">
          <span class="hours-day">${hour.days}</span>
          <span class="hours-time">${hour.hours}</span>
        </div>
      `
        )
        .join('');
    }

    // Update map
    const mapContainer = document.getElementById('map-container');
    if (mapContainer && contact.mapEmbed) {
      mapContainer.innerHTML = `
        <iframe
          src="${contact.mapEmbed}"
          width="100%"
          height="100%"
          style="border:0; border-radius: 8px;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
        ></iframe>
      `;
    }
  }

  const bootstrapContact = async () => {
    const formMessages = window.__CONTACT_FORM_MESSAGES__ || undefined;
    initContactForm(formMessages);

    // Fetch fresh contact data from Sanity
    const contactInfo = await fetchContactInfo();
    updateContactUI(contactInfo);
  };

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', bootstrapContact);
  } else {
    bootstrapContact();
  }

  document.addEventListener('astro:page-load', () => {
    setTimeout(bootstrapContact, 50);
  });

  document.addEventListener('astro:after-swap', () => {
    setTimeout(bootstrapContact, 50);
  });
</script>
