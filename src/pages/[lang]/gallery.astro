---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SUPPORTED_LANGS, getLangFromAstro, withLangParam } from '../../lib/i18n';
import { getTranslations } from '../../lib/translations';

export function getStaticPaths() {
  return SUPPORTED_LANGS.map(lang => ({ params: { lang } }));
}

const lang = getLangFromAstro(Astro);
const copy = getTranslations(lang);
const localizedHref = (path: string) => withLangParam(path, lang);
const currentPath = `${Astro.url.pathname}${Astro.url.search}`;

const categories = [
  { id: 'all', name: copy.gallery.filterAll },
  { id: 'massage', name: copy.gallery.categories.massage },
  { id: 'spa', name: copy.gallery.categories.spa },
  { id: 'rooms', name: copy.gallery.categories.rooms },
  { id: 'relaxation', name: copy.gallery.categories.relaxation },
  { id: 'staff', name: copy.gallery.categories.staff },
];
---

<Layout title={copy.gallery.pageTitle} description={copy.gallery.metaDescription} lang={lang}>
  <Header lang={lang} copy={copy} currentPath={currentPath} />

  <main class="gallery-page">
    <!-- Hero Section -->
    <section class="gallery-hero">
      <div class="container">
        <div class="gallery-hero-content">
          <h1 class="gallery-hero-title">{copy.gallery.heroTitle}</h1>
          <p class="gallery-hero-subtitle">{copy.gallery.heroSubtitle}</p>
        </div>
      </div>
    </section>

    <!-- Filter Tabs -->
    <section class="gallery-filters">
      <div class="container">
        <div class="filter-tabs">
          {
            categories.map(cat => (
              <button class={`filter-tab ${cat.id === 'all' ? 'active' : ''}`} data-filter={cat.id}>
                {cat.name}
              </button>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Gallery Grid -->
    <section class="gallery-section">
      <div class="container">
        <div class="gallery-masonry" id="gallery-masonry">
          <div class="loading-placeholder">
            <p>Cargando galer√≠a...</p>
          </div>
        </div>

        <!-- Load More Button -->
        <div class="load-more-container">
          <button class="load-more-btn">{copy.gallery.loadMore}</button>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="gallery-cta">
      <div class="container">
        <div class="cta-content">
          <h2 class="cta-title">{copy.gallery.ctaTitle}</h2>
          <p class="cta-subtitle">{copy.gallery.ctaSubtitle}</p>
          <div class="cta-buttons">
            <a href={localizedHref('/discover')} class="cta-btn-primary">{copy.common.explore}</a>
            <a href={localizedHref('/contact')} class="cta-btn-secondary">{copy.common.contactUs}</a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <!-- Lightbox Modal -->
  <div class="lightbox" id="lightbox">
    <button class="lightbox-close" aria-label={copy.gallery.aria.closeLightbox}>&times;</button>
    <button class="lightbox-prev" aria-label={copy.gallery.aria.prevImage}>
      <svg width="32" height="32" viewBox="0 0 24 24" fill="none">
        <path d="M15 18l-6-6 6-6" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
      </svg>
    </button>
    <button class="lightbox-next" aria-label={copy.gallery.aria.nextImage}>
      <svg width="32" height="32" viewBox="0 0 24 24" fill="none">
        <path d="M9 18l6-6-6-6" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
      </svg>
    </button>
    <div class="lightbox-content">
      <img src="" alt="" class="lightbox-image" />
      <div class="lightbox-info">
        <h3 class="lightbox-title"></h3>
        <p class="lightbox-category"></p>
      </div>
    </div>
  </div>

  <Footer lang={lang} copy={copy} />
</Layout>

<style>
  @import '../../styles/gallery.css';

  .loading-placeholder {
    text-align: center;
    padding: 3rem;
    color: rgba(255, 255, 255, 0.6);
    font-style: italic;
    grid-column: 1 / -1;
  }

  .no-images {
    text-align: center;
    padding: 3rem;
    grid-column: 1 / -1;
  }
</style>

<script
  is:inline
  define:vars={{
    lang,
    categoriesJson: JSON.stringify(categories),
    noImagesTitle: copy.gallery.noImagesTitle,
    noImagesDescription: copy.gallery.noImagesDescription,
    viewImageLabel: copy.gallery.aria.viewImage,
  }}
>
  window.__GALLERY_CONFIG__ = {
    lang,
    categories: JSON.parse(categoriesJson),
    noImagesTitle,
    noImagesDescription,
    viewImageLabel,
  };
</script>

<script>
  import { getGalleryImages, buildImageUrl } from '../../lib/sanity-client.js';
  import { initGallery } from '../../logic/gallery.js';

  function getImageUrl(image, width = 600, height = 600) {
    if (!image) return '';
    if (image.asset?.url) return image.asset.url;
    return buildImageUrl(image, { width, height });
  }

  function renderGallery(images, config) {
    const galleryMasonry = document.getElementById('gallery-masonry');
    if (!galleryMasonry) return;

    if (images && images.length > 0) {
      galleryMasonry.innerHTML = images
        .map((image, index) => {
          const thumbnailUrl = getImageUrl(image.image, 600, 600);
          const fullSizeUrl = getImageUrl(image.image, 1920, 1920);
          const categoryName = config.categories.find(c => c.id === image.category)?.name || image.category;

          return `
          <div class="gallery-item" data-category="${image.category}" data-index="${index}" data-title="${image.title || ''}" data-description="${image.description || ''}" data-full-url="${fullSizeUrl}">
            <div class="gallery-item-inner">
              ${
                image.image
                  ? `
                <img src="${thumbnailUrl}" alt="${image.image.alt || image.title || 'Gallery image'}" loading="lazy" />
              `
                  : `
                <div class="gallery-placeholder">
                  <svg width="60" height="60" viewBox="0 0 60 60" fill="none">
                    <rect x="10" y="10" width="40" height="40" rx="4" stroke="currentColor" stroke-width="2" />
                    <circle cx="22" cy="22" r="4" fill="currentColor" />
                    <path d="M10 40l10-10 8 8 12-12 10 8" stroke="currentColor" stroke-width="2" />
                  </svg>
                </div>
              `
              }
              <div class="gallery-overlay">
                <div class="gallery-info">
                  <h3 class="gallery-title">${image.title || ''}</h3>
                  <p class="gallery-category">${categoryName}</p>
                </div>
                <button class="view-btn" aria-label="${config.viewImageLabel}">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                    <path d="M15 3h6v6M14 10l6.1-6.1M9 21H3v-6M10 14l-6.1 6.1" stroke="white" stroke-width="2" stroke-linecap="round" />
                  </svg>
                </button>
              </div>
            </div>
          </div>
        `;
        })
        .join('');
    } else {
      galleryMasonry.innerHTML = `
        <div class="no-images">
          <h3>${config.noImagesTitle}</h3>
          <p>${config.noImagesDescription}</p>
        </div>
      `;
    }
  }

  async function loadGalleryData() {
    const config = window.__GALLERY_CONFIG__;

    try {
      const images = await getGalleryImages(config.lang);
      renderGallery(images, config);

      // Initialize gallery interactions after rendering
      setTimeout(() => initGallery(), 100);
    } catch (error) {
      console.error('Error loading gallery:', error);
    }
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', loadGalleryData);
  } else {
    loadGalleryData();
  }

  document.addEventListener('astro:page-load', loadGalleryData);
  document.addEventListener('astro:after-swap', loadGalleryData);
</script>
