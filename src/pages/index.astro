  }

  .service-item:hover {
    background: rgba(201, 184, 168, 0.15);
  }

  .service-item.active {
    background: #D4A574;
    color: white;
  }

  .service-item.active::after {
    display: none;
  }

  .service-icon {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    color: currentColor;
  }

  .service-icon svg {
    width: 100%;
    height: 100%;
  }

  .service-name {
    font-size: 15px;
    font-weight: 500;
    letter-spacing: 0.3px;
    text-transform: uppercase;
    line-height: 1.4;
  }

  /* Center: Service Image */
  .service-showcase-image {
    position: relative;
    border-radius: 24px;
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.12);
    aspect-ratio: 3/4;
    max-height: 700px;
  }

  .service-showcase-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .service-showcase-image:hover img {
    transform: scale(1.05);
  }

  /* Right: Service Details */
  .service-showcase-details {
    display: flex;
    flex-direction: column;
    gap: 24px;
    padding-top: 20px;
  }

  .service-showcase-title {
    font-size: 42px;
    font-weight: 600;
    color: #2C2C2C;
    line-height: 1.2;
    letter-spacing: -0.5px;
    margin: 0;
    text-transform: uppercase;
  }

  .service-showcase-description {
    font-size: 16px;
    line-height: 1.75;
    color: #6B6B6B;
    margin: 0;
  }

  .service-benefits {
    margin: 10px 0;
  }

  .benefits-columns {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
  }

  .benefits-column {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .benefits-column li {
    font-size: 15px;
    color: #6B6B6B;
    padding-left: 28px;
    position: relative;
    line-height: 1.5;
  }

  .benefits-column li::before {
    content: '•';
    position: absolute;
    left: 10px;
    color: #D4A574;
    font-size: 20px;
    font-weight: bold;
  }

  .service-meta {
    display: flex;
    gap: 30px;
    align-items: baseline;
    margin-top: 10px;
  }

  .service-price {
    font-size: 32px;
    font-weight: 700;
    color: #2C2C2C;
  }

  .service-duration {
    font-size: 16px;
    color: #6B6B6B;
    font-weight: 500;
  }

  .btn-learn-more {
    display: inline-block;
    padding: 16px 50px;
    background: #D4A574;
    color: white;
    text-decoration: none;
    border-radius: 8px;
    font-size: 14px;
    font-weight: 600;
    letter-spacing: 1.5px;
    text-transform: uppercase;
    transition: all 0.3s ease;
    box-shadow: 0 4px 20px rgba(212, 165, 116, 0.3);
    margin-top: 10px;
  }

  .btn-learn-more:hover {
    background: #C89560;
    transform: translateY(-2px);
    box-shadow: 0 6px 30px rgba(212, 165, 116, 0.4);
  }

  .no-services {
    text-align: center;
    padding: 60px 20px;
    color: #6B6B6B;
  }

  .cta-center {
    display: flex;
    justify-content: center;
  }

  @media (max-width: 1200px) {
    .services-showcase {
      grid-template-columns: 1fr;
      gap: 50px;
    }

    .services-list {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    }

    .service-showcase-details {
      max-width: 600px;
      margin: 0 auto;
    }
  }

  @media (max-width: 968px) {
    .hero .container {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .hero-title {
      font-size: 48px;
    }

    .benefits-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 30px;
