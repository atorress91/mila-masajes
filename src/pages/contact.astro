---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getContactInfo } from '../lib/sanity';

// Fetch contact information from Sanity
const contactInfo = await getContactInfo();

// Fallback data if Sanity content is not available
const fallbackContact = {
  phone: '+987 654 321 012',
  email: 'info@massagebliss.com',
  address: '123 Serenity Lane, Relax City, CA 94012',
  mapEmbed: 'https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d52901.38783909427!2d-122.41941550000001!3d37.7749295!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x80859a6d00690021%3A0x4a501367f076adff!2sSan%20Francisco%2C%20CA!5e0!3m2!1sen!2sus!4v1698857612345!5m2!1sen!2sus',
  socialMedia: {
    instagram: 'https://instagram.com',
    twitter: 'https://twitter.com',
  },
  hours: []
};

const contact = contactInfo || fallbackContact;

// Split phone numbers if multiple are provided (separated by comma or newline)
const phoneNumbers = contact.phone ? contact.phone.split(/[,\n]/).map((p: string) => p.trim()).filter(Boolean) : [];
---

<Layout title="Contact Us - Massage Bliss">
  <Header />

  <main class="contact-page">
    <div class="container">
      <div class="contact-grid">
        <!-- Contact Information Card -->
        <div class="contact-info-card">
          <h1 class="contact-title">Contact Us</h1>

          <div class="info-sections">
            <!-- Phone Section -->
            <div class="info-section">
              <div class="info-header">
                <svg class="info-icon" width="20" height="20" viewBox="0 0 20 20" fill="none">
                  <path
                    d="M18.3 14.5C17.1 14.5 15.9 14.3 14.8 13.9C14.5 13.8 14.1 13.9 13.9 14.1L12.2 16.2C9.4 14.9 5.1 10.6 3.8 7.8L5.9 6C6.1 5.8 6.2 5.4 6.1 5.1C5.7 4 5.5 2.8 5.5 1.6C5.5 1.1 5.1 0.7 4.6 0.7H1.6C1.1 0.7 0.5 0.9 0.5 1.6C0.5 11.4 8.6 19.5 18.4 19.5C19 19.5 19.3 18.9 19.3 18.4V15.4C19.3 14.9 18.9 14.5 18.3 14.5Z"
                    fill="currentColor"
                  />
                </svg>
                <h3 class="info-title">Phone</h3>
              </div>
              {phoneNumbers.length > 0 ? (
                phoneNumbers.map((phone: string) => (
                  <p class="info-text">{phone}</p>
                ))
              ) : (
                <p class="info-text">{contact.phone}</p>
              )}
            </div>

            <!-- Email Section -->
            <div class="info-section">
              <div class="info-header">
                <svg class="info-icon" width="20" height="20" viewBox="0 0 20 20" fill="none">
                  <path
                    d="M18 4H2C1.45 4 1 4.45 1 5V15C1 15.55 1.45 16 2 16H18C18.55 16 19 15.55 19 15V5C19 4.45 18.55 4 18 4ZM17.5 6.5L10 10.75L2.5 6.5V5.5L10 9.75L17.5 5.5V6.5Z"
                    fill="currentColor"
                  />
                </svg>
                <h3 class="info-title">E-mail</h3>
              </div>
              <p class="info-text">{contact.email}</p>
            </div>

            <!-- Address Section -->
            <div class="info-section">
              <div class="info-header">
                <svg class="info-icon" width="20" height="20" viewBox="0 0 20 20" fill="none">
                  <path
                    d="M10 2C6.69 2 4 4.69 4 8C4 12.5 10 18 10 18C10 18 16 12.5 16 8C16 4.69 13.31 2 10 2ZM10 10.5C8.62 10.5 7.5 9.38 7.5 8C7.5 6.62 8.62 5.5 10 5.5C11.38 5.5 12.5 6.62 12.5 8C12.5 9.38 11.38 10.5 10 10.5Z"
                    fill="currentColor"
                  />
                </svg>
                <h3 class="info-title">Address</h3>
              </div>
              {contact.address.split(',').map((line: string) => (
                <p class="info-text">{line.trim()}</p>
              ))}
            </div>

            <!-- Hours Section -->
            {contact.hours && contact.hours.length > 0 && (
              <div class="info-section">
                <div class="info-header">
                  <svg class="info-icon" width="20" height="20" viewBox="0 0 20 20" fill="none">
                    <path
                      d="M10 2C5.58 2 2 5.58 2 10C2 14.42 5.58 18 10 18C14.42 18 18 14.42 18 10C18 5.58 14.42 2 10 2ZM10 16C6.69 16 4 13.31 4 10C4 6.69 6.69 4 10 4C13.31 4 16 6.69 16 10C16 13.31 13.31 16 10 16ZM10.5 6H9V11L13.25 13.52L14 12.27L10.5 10.25V6Z"
                      fill="currentColor"
                    />
                  </svg>
                  <h3 class="info-title">Business Hours</h3>
                </div>
                {contact.hours.map((hour: any) => (
                  <div class="hours-row">
                    <span class="hours-days">{hour.days}</span>
                    <span class="hours-time">{hour.hours}</span>
                  </div>
                ))}
              </div>
            )}

            <!-- Follow Us Section -->
            <div class="info-section">
              <div class="info-header">
                <svg class="info-icon" width="20" height="20" viewBox="0 0 20 20" fill="none">
                  <path
                    d="M8 10C8 8.9 8.9 8 10 8C11.1 8 12 8.9 12 10C12 11.1 11.1 12 10 12C8.9 12 8 11.1 8 10ZM17 6V14C17 15.1 16.1 16 15 16H5C3.9 16 3 15.1 3 14V6C3 4.9 3.9 4 5 4H15C16.1 4 17 4.9 17 6ZM14 10C14 7.79 12.21 6 10 6C7.79 6 6 7.79 6 10C6 12.21 7.79 14 10 14C12.21 14 14 12.21 14 10Z"
                    fill="currentColor"
                  />
                </svg>
                <h3 class="info-title">Follow Us</h3>
              </div>
              <div class="social-icons">
                {contact.socialMedia?.instagram && (
                  <a href={contact.socialMedia.instagram} target="_blank" rel="noopener noreferrer" class="social-link">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                      <path
                        d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
                      ></path>
                    </svg>
                  </a>
                )}
                {contact.socialMedia?.twitter && (
                  <a href={contact.socialMedia.twitter} target="_blank" rel="noopener noreferrer" class="social-link">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                      <path
                        d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"
                      ></path>
                    </svg>
                  </a>
                )}
                {contact.socialMedia?.facebook && (
                  <a href={contact.socialMedia.facebook} target="_blank" rel="noopener noreferrer" class="social-link">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                      <path
                        d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
                      ></path>
                    </svg>
                  </a>
                )}
                {contact.socialMedia?.linkedin && (
                  <a href={contact.socialMedia.linkedin} target="_blank" rel="noopener noreferrer" class="social-link">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                      <path
                        d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                      ></path>
                    </svg>
                  </a>
                )}
              </div>
            </div>
          </div>

          <!-- Map -->
          {contact.mapEmbed && (
            <div class="map-container">
              <iframe
                src={contact.mapEmbed}
                width="100%"
                height="280"
                style="border:0; border-radius: 15px;"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"
              ></iframe>
            </div>
          )}
        </div>

        <!-- Contact Form Card -->
        <div class="contact-form-card">
          <h2 class="form-title">Get in Touch</h2>

          <form id="contactForm" class="contact-form">
            <div class="form-row">
              <div class="form-group">
                <label for="firstName" class="form-label">Your Name</label>
                <input
                  type="text"
                  id="firstName"
                  name="firstName"
                  placeholder="Jordan"
                  class="form-input"
                  required
                />
              </div>

              <div class="form-group">
                <label for="lastName" class="form-label">Last Name</label>
                <input
                  type="text"
                  id="lastName"
                  name="lastName"
                  placeholder="Smith"
                  class="form-input"
                  required
                />
              </div>
            </div>

            <div class="form-group">
              <label for="email" class="form-label">E-mail</label>
              <input
                type="email"
                id="email"
                name="email"
                placeholder="yourname@domain.com"
                class="form-input"
                required
              />
            </div>

            <div class="form-group">
              <label for="message" class="form-label">Message</label>
              <textarea
                id="message"
                name="message"
                placeholder="Write your message"
                class="form-textarea"
                rows="5"
                required></textarea>
            </div>

            <button type="submit" class="btn-submit">
              <span>Send</span>
              <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                <path
                  d="M8 4L14 10L8 16"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                />
              </svg>
            </button>
          </form>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</Layout>

<style>
  .contact-page {
    min-height: calc(100vh - 200px);
    padding: 80px 0 60px;
    background: linear-gradient(135deg, var(--blanco-calido) 0%, var(--beige-arena) 100%);
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 40px;
    max-width: 1400px;
    margin: 0 auto;
  }

  /* Contact Info Card */
  .contact-info-card {
    background: white;
    border-radius: 25px;
    padding: 50px 40px;
    display: flex;
    flex-direction: column;
    gap: 30px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }

  .contact-title {
    font-size: 48px;
    font-weight: 700;
    color: var(--text-primary);
    margin: 0 0 20px;
  }

  .info-sections {
    display: flex;
    flex-direction: column;
    gap: 30px;
  }

  .info-section {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .info-header {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 8px;
  }

  .info-icon {
    width: 20px;
    height: 20px;
    color: var(--text-primary);
  }

  .info-title {
    font-size: 18px;
    font-weight: 600;
    color: var(--text-primary);
    margin: 0;
  }

  .info-text {
    font-size: 16px;
    color: var(--text-primary);
    margin: 0;
    padding-left: 30px;
  }

  .social-icons {
    display: flex;
    gap: 15px;
    padding-left: 30px;
  }

  .social-link {
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-primary);
    transition: all 0.3s ease;
  }

  .hours-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 8px 0;
    padding-left: 30px;
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  }

  .hours-row:last-child {
    border-bottom: none;
  }

  .hours-days {
    font-size: 15px;
    font-weight: 600;
    color: var(--text-primary);
  }

  .hours-time {
    font-size: 15px;
    color: var(--text-secondary);
  }

  .social-link:hover {
    color: var(--coral-rosado);
    transform: translateY(-3px);
  }

  .map-container {
    width: 100%;
    margin-top: 10px;
  }

  /* Contact Form Card */
  .contact-form-card {
    background: linear-gradient(135deg, var(--verde-salvia) 0%, var(--coral-rosado) 100%);
    border-radius: 25px;
    padding: 50px 40px;
    box-shadow: 0 10px 40px rgba(168, 197, 190, 0.25);
  }

  .form-title {
    font-size: 48px;
    font-weight: 700;
    color: white;
    margin: 0 0 40px;
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 25px;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .form-label {
    font-size: 16px;
    font-weight: 400;
    color: white;
  }

  .form-input,
  .form-textarea {
    background: transparent;
    border: none;
    border-bottom: 2px solid rgba(255, 255, 255, 0.3);
    padding: 12px 0;
    font-size: 16px;
    color: white;
    font-family: 'Poppins', sans-serif;
    transition: border-color 0.3s ease;
  }

  .form-input::placeholder,
  .form-textarea::placeholder {
    color: rgba(255, 255, 255, 0.5);
  }

  .form-input:focus,
  .form-textarea:focus {
    outline: none;
    border-bottom-color: white;
  }

  .form-textarea {
    resize: vertical;
    min-height: 100px;
  }

  .btn-submit {
    background: white;
    border: 2px solid white;
    border-radius: 12px;
    padding: 15px 40px;
    font-size: 18px;
    font-weight: 600;
    color: var(--verde-salvia);
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    transition: all 0.3s ease;
    margin-top: 10px;
    font-family: 'Poppins', sans-serif;
    box-shadow: 0 4px 15px rgba(255, 255, 255, 0.3);
  }

  .btn-submit:hover {
    background: var(--blanco-calido);
    border-color: var(--blanco-calido);
    color: var(--texto-principal);
    transform: translateY(-3px);
    box-shadow: 0 6px 20px rgba(255, 255, 255, 0.4);
  }

  .btn-submit svg {
    width: 20px;
    height: 20px;
  }

  /* Responsive Design */
  @media (max-width: 1200px) {
    .contact-grid {
      gap: 30px;
    }

    .contact-info-card,
    .contact-form-card {
      padding: 40px 30px;
    }
  }

  @media (max-width: 968px) {
    .contact-grid {
      grid-template-columns: 1fr;
    }

    .contact-title,
    .form-title {
      font-size: 40px;
    }

    .form-row {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 768px) {
    .contact-page {
      padding: 60px 0 80px;
    }

    .contact-title,
    .form-title {
      font-size: 36px;
      margin-bottom: 30px;
    }

    .contact-info-card,
    .contact-form-card {
      padding: 35px 25px;
    }

    .info-sections {
      gap: 25px;
    }
  }

  @media (max-width: 480px) {
    .contact-title,
    .form-title {
      font-size: 28px;
      margin-bottom: 25px;
    }

    .contact-info-card,
    .contact-form-card {
      padding: 30px 20px;
      border-radius: 20px;
    }

    .btn-submit {
      width: 100%;
      padding: 15px 30px;
    }
  }
</style>

<script>
  // Form submission handler
  const contactForm = document.getElementById('contactForm') as HTMLFormElement;

  if (contactForm) {
    contactForm.addEventListener('submit', (e) => {
      e.preventDefault();

      // Get form data
      const formData = new FormData(contactForm);
      const data = {
        firstName: formData.get('firstName'),
        lastName: formData.get('lastName'),
        email: formData.get('email'),
        message: formData.get('message'),
      };

      // Show success message (you can integrate with a real backend here)
      alert(
        `Thank you, ${data.firstName}! Your message has been sent.\n\nWe'll get back to you at ${data.email} soon.`
      );

      // Reset form
      contactForm.reset();

      // In a real application, you would send this data to your backend:
      // fetch('/api/contact', {
      //   method: 'POST',
      //   headers: { 'Content-Type': 'application/json' },
      //   body: JSON.stringify(data)
      // })
    });
  }
</script>
