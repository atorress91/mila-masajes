---
import type { Service } from '../data/services';

interface Props {
  service: Service;
}

const { service } = Astro.props;
---

<div class="service-card" data-service-id={service.id}>
  <div class="service-image">
    <img src={service.image} alt={service.title} />
    {service.badge && <span class="service-badge">{service.badge}</span>}
    <button class="quick-view-btn" data-service-id={service.id}>
      Quick View
    </button>
  </div>
  
  <div class="service-info">
    <h3 class="service-title">{service.title}</h3>
    <p class="service-description">{service.description}</p>
    <div class="service-footer">
      <span class="service-price">${service.price.toFixed(2)}</span>
      <button class="add-btn" data-service-id={service.id}>
        <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
          <path d="M10 4V16M4 10H16" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
        </svg>
      </button>
    </div>
  </div>
</div>

<style>
  .service-card {
    background: white;
    border-radius: 20px;
    overflow: hidden;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .service-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
  }

  .service-image {
    position: relative;
    width: 100%;
    height: 280px;
    overflow: hidden;
  }

  .service-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .service-card:hover .service-image img {
    transform: scale(1.1);
  }

  .service-badge {
    position: absolute;
    top: 15px;
    right: 15px;
    background: var(--emphasis-color);
    color: white;
    padding: 6px 16px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .quick-view-btn {
    position: absolute;
    bottom: 15px;
    left: 50%;
    transform: translateX(-50%) translateY(100px);
    background: white;
    color: var(--text-primary);
    border: none;
    padding: 12px 30px;
    border-radius: 25px;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    opacity: 0;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
  }

  .service-card:hover .quick-view-btn {
    transform: translateX(-50%) translateY(0);
    opacity: 1;
  }

  .quick-view-btn:hover {
    background: var(--accent-color);
    color: white;
  }

  .service-info {
    padding: 25px;
  }

  .service-title {
    font-size: 24px;
    font-weight: 600;
    margin-bottom: 12px;
    color: var(--text-primary);
  }

  .service-description {
    font-size: 14px;
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: 20px;
  }

  .service-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .service-price {
    font-size: 28px;
    font-weight: 700;
    color: var(--accent-color);
  }

  .add-btn {
    width: 45px;
    height: 45px;
    border-radius: 50%;
    background: var(--accent-color);
    color: white;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .add-btn:hover {
    background: #6a9688;
    transform: scale(1.1);
  }

  @media (max-width: 768px) {
    .service-image {
      height: 220px;
    }

    .service-info {
      padding: 20px;
    }

    .service-title {
      font-size: 20px;
      margin-bottom: 10px;
    }

    .service-description {
      font-size: 13px;
      margin-bottom: 16px;
    }

    .service-price {
      font-size: 24px;
    }

    .add-btn {
      width: 42px;
      height: 42px;
    }

    /* Show quick view button by default on mobile for easier access */
    .quick-view-btn {
      opacity: 1;
      transform: translateX(-50%) translateY(0);
      padding: 10px 24px;
      font-size: 13px;
    }
  }

  @media (max-width: 480px) {
    .service-image {
      height: 200px;
    }

    .service-title {
      font-size: 18px;
    }

    .service-description {
      font-size: 12px;
    }

    .service-price {
      font-size: 22px;
    }

    .add-btn {
      width: 40px;
      height: 40px;
    }
  }
</style>
