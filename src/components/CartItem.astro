---
// Cart Item Component
interface Props {
  item: {
    title: string;
    basePrice: number;
    image: string;
    quantity: number;
    addons: Array<{ name: string; price: number }>;
  };
  index: number;
}

const { item, index } = Astro.props;

const itemTotal = () => {
  let total = item.basePrice;
  item.addons?.forEach((addon) => {
    total += addon.price;
  });
  return total * item.quantity;
};
---

<div class="cart-item" data-index={index}>
  <div class="cart-item-image">
    <img src={item.image} alt={item.title} />
  </div>

  <div class="cart-item-details">
    <h3 class="cart-item-title">{item.title}</h3>
    <span class="cart-item-price">${item.basePrice.toFixed(2)}</span>

    {
      item.addons && item.addons.length > 0 && (
        <div class="cart-item-addons">
          {item.addons.map((addon) => (
            <div class="cart-item-addon">
              <span>
                {addon.name} (+${addon.price.toFixed(2)})
              </span>
            </div>
          ))}
        </div>
      )
    }
  </div>

  <div class="cart-item-quantity">
    <span class="cart-item-quantity-label">Quantity: {item.quantity}</span>
    <div class="quantity-controls">
      <button class="qty-cart-btn minus" data-index={index} aria-label="Decrease quantity">
        −
      </button>
      <span class="qty-cart-display">{item.quantity}</span>
      <button class="qty-cart-btn plus" data-index={index} aria-label="Increase quantity">
        +
      </button>
    </div>
  </div>

  <div class="cart-item-actions">
    <button class="remove-item-btn" data-index={index}>Remove</button>
  </div>
</div>

<style>
  .cart-item {
    display: grid;
    grid-template-columns: 180px 1fr auto auto;
    gap: 30px;
    align-items: center;
    background: white;
    padding: 30px;
    border-radius: 20px;
    margin-bottom: 20px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
  }

  .cart-item-image {
    width: 180px;
    height: 120px;
    border-radius: 15px;
    overflow: hidden;
    background: var(--background-light);
  }

  .cart-item-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .cart-item-details {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .cart-item-title {
    font-size: 24px;
    font-weight: 400;
    color: var(--text-primary);
    margin: 0;
  }

  .cart-item-price {
    display: inline-flex;
    align-items: center;
    background: var(--dark-bg);
    color: white;
    padding: 8px 20px;
    border-radius: 20px;
    font-size: 20px;
    font-weight: 400;
    width: fit-content;
  }

  .cart-item-addons {
    margin-top: 8px;
  }

  .cart-item-addon {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
    color: var(--text-secondary);
    margin-bottom: 4px;
  }

  .cart-item-addon::before {
    content: '•';
    color: var(--accent-color);
    font-weight: 700;
  }

  .cart-item-quantity {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 15px;
  }

  .cart-item-quantity-label {
    font-size: 24px;
    font-weight: 400;
    color: var(--text-primary);
  }

  .quantity-controls {
    display: flex;
    align-items: center;
    gap: 15px;
  }

  .qty-cart-btn {
    width: 35px;
    height: 35px;
    border-radius: 8px;
    border: 2px solid var(--accent-color);
    background: white;
    color: var(--accent-color);
    font-size: 24px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    line-height: 1;
  }

  .qty-cart-btn:hover {
    background: var(--accent-color);
    color: white;
  }

  .qty-cart-btn:disabled {
    opacity: 0.4;
    cursor: not-allowed;
  }

  .qty-cart-display {
    font-size: 20px;
    font-weight: 600;
    color: var(--text-primary);
    min-width: 30px;
    text-align: center;
  }

  .cart-item-actions {
    display: flex;
    align-items: center;
  }

  .remove-item-btn {
    background: none;
    border: none;
    color: var(--text-secondary);
    font-size: 18px;
    font-weight: 400;
    cursor: pointer;
    padding: 8px 16px;
    transition: color 0.3s ease;
  }

  .remove-item-btn:hover {
    color: #d9534f;
  }

  @media (max-width: 968px) {
    .cart-item {
      grid-template-columns: 140px 1fr;
      gap: 20px;
    }

    .cart-item-image {
      width: 140px;
      height: 100px;
    }

    .cart-item-quantity,
    .cart-item-actions {
      grid-column: 1 / -1;
      justify-self: start;
    }

    .cart-item-quantity {
      flex-direction: row;
      gap: 20px;
    }
  }

  @media (max-width: 768px) {
    .cart-item {
      grid-template-columns: 1fr;
      padding: 20px;
    }

    .cart-item-image {
      width: 100%;
      height: 180px;
    }

    .cart-item-title {
      font-size: 20px;
    }

    .cart-item-price {
      font-size: 18px;
      padding: 6px 16px;
    }

    .cart-item-quantity-label {
      font-size: 18px;
    }
  }
</style>
